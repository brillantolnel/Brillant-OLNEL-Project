
{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  User has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}



<div class="row">
  <div class="col-6">
    <h1>Users</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/formUtilisateur" type="button" class="btn btn-primary align-self-center">+Nouvel Departement</a>
  </div>
</div>
<br>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Prenom</th>
      <th scope="col">Telephone</th>
      <th scope="col">Email</th>
      <th scope="col">Site</th>
      <th scope="col">Departement</th>
      <th scope="col">materiel</th>
      <th scope="col">Type</th>
      <th scope="col">Licences</th>
      <th scope="col">Status</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <td>{{this.nom}}</td>
      <td>{{this.prenom}}</td>
      <td>{{this.tel}}</td>
      <td>{{this.email}}</td>
      <td>{{this.site}}</td>
      <td>{{this.departement}}</td>
      <td>{{this.materiel}}</td>
      <td>{{this.type}}</td>
      <td>{{this.licence}}</td>
      <td>{{this.status}}</td>
      <td class="text-end">
         <a href="/editUtilisateur/{{this.id}}" type="button" class="btn btn-primary btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        </td>
    </tr>
    {{/each}}

  </tbody>
</table>
